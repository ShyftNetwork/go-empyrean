version: '3'
services:
  shyftgeth:
    build:
      context: $PWD 
      dockerfile: ./Dockerfile
    ports:
      - "8545:8545"
      - "8546:8546"
      - "30301:30301"
      - "30301:30301/udp"
      - "30303:30303"
      - "30303:30303/udp"
      - "30304:30304"
      - "31333:31333"
      - "31333:31333/udp"
      - "8081:8081"
    volumes:
      - ./shyftData/:/go-empyrean/shyftData/
      - ./shyft-config/:/go-empyrean/shyft-config/
    working_dir: /go-empyrean
#    depends_on: 
#      - pg
    networks:
      - shyftnet
    command: >
      sh -c 'cd /go-empyrean &&
            geth --disablepg --identity "ShyftPOANode" --keystore "./keystore" --datadir "./shyftData" init "./shyft-config/benchmark.json" &&
            geth --disablepg --config "./shyft-config/config.toml" --keystore "./keystore" --syncmode full --gcmode archive --ws --wsaddr="0.0.0.0" --wsorigins "*" --nat=any --ethstats "${ETHSTATS_NODE_NAME}:mysecret@ws://3.132.173.222:3000" --bootnodes ${BOOTNODES}'

